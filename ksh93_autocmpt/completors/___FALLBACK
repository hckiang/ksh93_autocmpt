#!/bin/ksh93 -e
typeset -a results
typeset -i j=0
STUB="${@: -1}"
if [[ "$STUB" = '..' || "$STUB" = *@(/..) ]]; then
    print -n - $STUB/
    exit 0
fi
for x in "${STUB}"*; do
    [[ -d "$x" ]] && x="$x/" || x="$x"
    results[$((j++))]="$x"
done

## Handle failed grub
if [[ ${#results[*]} -eq 1 ]]; then
   if [[ "${results[0]}" = "${STUB}"'*' ]]; then
      exit 0
   fi
fi
IFS=$'\a'
print -r -n - "${results[*]}"
